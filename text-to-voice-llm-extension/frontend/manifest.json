{
  "manifest_version": 3,
  "name": "LLM Text to Voice",
  "version": "1.0",
  "description": "Send selected text to LLM and speak response",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
